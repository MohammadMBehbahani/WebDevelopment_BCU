@{
    ViewData["Title"] = "Category Page";
}
@model WebDevelopment_BCU.Models.ViewData.HomeData

<section class="menu section-padding">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <h2 class="text-center mb-lg-5 mb-4">Category</h2>
            </div>
            @foreach (var item in Model.Category.ListData)
            {
                <div class="col-lg-4 col-md-6 col-12">
                <div class="menu-thumb">
                    <div class="menu-image-wrap">
                        <img src="~/@item.Image" class="img-fluid menu-image" alt="">
                    </div>

                    <div class="menu-info d-flex flex-wrap align-items-center">
                        <h4 class="mb-0">@item.Name</h4>
                    </div>
                </div>
            </div>
            }
        </div>
        <div class="pagination">
            @if (Model.Category != null)
            {
                <form action="/Category/Index" method="get">
                    @for (int i = 0; i < Model.Category.NumberOfPage; i++)
                    {
                        var j = i + 1;
                        <input type="submit" class="btn btn-primary" name="Page" value="@j">
                    }
                </form>
            }
        </div>
    </div>
</section>
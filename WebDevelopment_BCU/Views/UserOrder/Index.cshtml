@{
    ViewData["Title"] = "News Detail Page";
}
@model WebDevelopment_BCU.Models.ViewData.HomeData

<section class="news-detail section-padding pt-0">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">

                <div class="col-lg-10 col-10 mx-auto mt-5">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>OrderCode</th>
                                <th>DateRequest</th>
                                <th>DateDelivery</th>
                                <th>TotalPrice</th>
                                <th>InserDate</th>
                                <th>#</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserOrders.ListData)
                            {
                                <tr class="gradeA">
                                    <td>@item.UserOrderCode</td>
                                    <td>@item.DateRequest</td>
                                    <td>@item.DateDelivery</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.InserDate</td>
                                    <td>

                                        <form action="/UserOrder/Details" method="get">
                                            <input  hidden class="btn btn-primary" name="UserOrderId" value="@item.Id">
                                            <button type="submit"  class="btn btn-primary">Detail</button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

                <div class="pagination">
                    @if (Model.UserOrders != null)
                    {
                        <form action="/UserOrder/Index" method="get">
                            @for (int i = 0; i < Model.UserOrders.NumberOfPage; i++)
                            {
                                var j = i + 1;
                                <input type="submit" class="btn btn-primary" name="Page" value="@j">
                            }
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</section>





@{
    ViewData["Title"] = "News Detail Page";
}
@model WebDevelopment_BCU.Models.ViewData.HomeData

<section class="news-detail section-padding pt-0">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">

                <div class="col-lg-10 col-10 mx-auto mt-5">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>unit price</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserOrderDetails.ListData)
                            {
                                <tr class="gradeA">
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Product.Price</td>
                                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

                <div class="pagination">
                    @if (Model.UserOrderDetails != null)
                    {
                        <form action="/UserOrder/Details" method="get">
                            @for (int i = 0; i < Model.UserOrderDetails.NumberOfPage; i++)
                            {
                                var j = i + 1;
                                <input hidden name="UserOrderId" value="@Model.UserOrderDetails.ListData.FirstOrDefault().UserOrdersId">

                                <input type="submit" class="btn btn-primary" name="Page" value="@j">
                            }
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</section>





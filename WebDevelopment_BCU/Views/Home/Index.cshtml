@{
    ViewData["Title"] = "Home Page";
}

@model WebDevelopment_BCU.Models.ViewData.HomeData

<section class="hero">
    <div class="container">
        <div class="row">

            <div class="col-lg-5 col-12 m-auto">
                <div class="heroText">

                    <h1 class="text-white mb-lg-5 mb-3">Delicious Food</h1>

                    <div class="c-reviews my-3 d-flex flex-wrap align-items-center">
                        <div class="d-flex flex-wrap align-items-center">
                            <h4 class="text-white mb-0 me-3">4.4/5</h4>

                            <div class="reviews-stars">
                                <i class="bi-star-fill reviews-icon"></i>
                                <i class="bi-star-fill reviews-icon"></i>
                                <i class="bi-star-fill reviews-icon"></i>
                                <i class="bi-star-fill reviews-icon"></i>
                                <i class="bi-star reviews-icon"></i>
                            </div>
                        </div>

                        <p class="text-white w-100">From <strong>1,206+</strong> Customer Reviews</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 col-12">
                <div id="carouselExampleCaptions" class="carousel carousel-fade hero-carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="carousel-image-wrap">
                                <img src="https://www.w3schools.com/howto/img_nature_wide.jpg" class="img-fluid carousel-image" alt="">
                            </div>

                            <div class="carousel-caption">


                                <h4 class="hero-text">Fine Dining Restaurant</h4>
                            </div>
                        </div>

                        @foreach (var item in Model.Slider.ListData)
                        {
                            <div class="carousel-item">
                                <div class="carousel-image-wrap">
                                    @if (string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="https://www.yiwubazaar.com/resources/assets/images/default-product.jpg" 
                                        class="img-fluid carousel-image img-responsive" 
                                            style="height:260px">
                                    }
                                    else
                                    {
                                        <img src="~/@item.Image" class="img-fluid carousel-image img-responsive" 
                                            style="height:260px">
                                    }
                                </div>

                                <div class="carousel-caption">
                                    <div class="d-flex align-items-center">
                                        <h4 class="hero-text">@item.Name</h4>

                                        <span class="price-tag ms-4"><small>$</small>@item.Price</span>
                                    </div>


                                </div>
                            </div>
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>
    </div>

    <div class="overlay"></div>
</section>

<section class="menu section-padding">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <h2 class="text-center mb-lg-5 mb-4">Category</h2>
            </div>

            @foreach (var item in Model.Category.ListData)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="menu-thumb">
                        <div class="menu-image-wrap">
                            <img src="~/@item.Image" style="height:200px;width:300px" class="img-fluid menu-image" alt="">
                        </div>

                        <div class="menu-info d-flex flex-wrap align-items-center">
                            <h4 class="mb-0">@item.Name</h4>
                        </div>
                        <form action="/Product/Index" method="get">
                            <input hidden name="SearchKey" value="@item.Id" />
                            <button type="submit" class="btn btn-success fa fa-list-alt"> View</button>
                        </form>
                    </div>
                </div>
            }

        </div>
        <div class="row">

            <div class="col-12">
                <h2 class="text-center mb-lg-5 mb-4">Product</h2>
            </div>

            @foreach (var item in Model.Products.ListData)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="menu-thumb">
                        <div class="menu-image-wrap">
                            @if (item.ProductImages == null)
                            {
                                <img src="https://www.yiwubazaar.com/resources/assets/images/default-product.jpg" class="img-fluid carousel-image">
                            }
                            else
                            {
                                <img src="~/@item.ProductImages.FirstOrDefault().Src" style="height:200px;width:300px" class="img-fluid carousel-image">
                            }
                        </div>

                        <div class="menu-info d-flex flex-wrap align-items-center">
                            <h4 class="mb-0">@item.Name</h4>

                            <span class="price-tag bg-white shadow-lg ms-4"><small>$</small>@item.Price</span>
                        </div>
                        <form action="/Product/Index" method="get">
                            <input hidden name="SearchKey" value="@item.Id" />
                            <button type="submit" class="btn btn-success fa fa-list-alt"> View</button>
                        </form>
                    </div>
                </div>
            }

        </div>
        <div class="row">

            <div class="col-12">
                <h2 class="text-center mb-lg-5 mb-4">News</h2>
            </div>

            @foreach (var item in Model.News.ListData)
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="menu-thumb">
                        <div class="menu-image-wrap">
                            <img src="~/@item.Image" class="img-fluid menu-image" alt="">

                            <span class="menu-tag bg-warning">@item.Title</span>
                        </div>

                        <div class="menu-info d-flex flex-wrap align-items-center">
                            <h4 class="mb-0">@item.Caption</h4>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>




